<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="txt_style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:shadowColor">#3C3C3C</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="horizontal_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="txt_style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_horizontal|center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:shadowColor">#3C3C3C</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="txt_view">
        <item name="android:textColor">@color/grayCloud</item>
        <item name="android:layout_width">289dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:width">300dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="btn_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textSize">24sp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="btn_style_2">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius" tools:ignore="DuplicateDefinition">15</item>
    </style>
</resources>